#version 400 core
//------------------------------------------------------------------------------------------
// vertex shader, directional light rendering
//------------------------------------------------------------------------------------------

//------------------------------------------------------------------------------------------
// uniforms
layout(std140) uniform Matrices
{
    mat4 modelMatrix;
    mat4 normalMatrix;
    mat4 viewProjectionMatrix;
    mat4 shadowMatrix;
};

//------------------------------------------------------------------------------------------
in vec3 v_coord;

//------------------------------------------------------------------------------------------
void main()
{
    vec4 worldCoord = vec4(v_coord, 1.0f);

    /////////////////////////////////////////////////////////////////
    // output
    gl_Position = viewProjectionMatrix * worldCoord;
}
